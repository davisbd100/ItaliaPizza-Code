<UserControl x:Class="ItaliaPizza.UserControlPedidos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizza"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="120" Height="725">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="725" Stroke="White" VerticalAlignment="Top" Width="120">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FFC3CCD4" Opacity="0.4"/>
            </Rectangle.Fill>
        </Rectangle>
        <Image HorizontalAlignment="Left" Height="104" Margin="6,10,0,0" VerticalAlignment="Top" Width="110" Source="Recursos/LogoItaliaPizza.png"/>
        <Label x:Name="LabelNombre" Content="Label" HorizontalAlignment="Left" Margin="6,114,0,0" VerticalAlignment="Top" Width="104" FontSize="14" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="LabelTipoEmpleado" Content="Label" HorizontalAlignment="Left" Margin="6,137,0,0" VerticalAlignment="Top" Width="104" FontSize="10" Foreground="White"/>
    </Grid>
</UserControl>
