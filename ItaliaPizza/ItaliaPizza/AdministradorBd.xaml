        <Button x:Name="ButtonNuevo" Content="Nuevo respaldo de infomación" HorizontalAlignment="Left" Height="72" Margin="212,194,0,0" VerticalAlignment="Top" Width="334" BorderBrush="#FF008050" Background="#FF008050" Foreground="White" FontFamily="Calibri Light" FontSize="22" Click="ButtonNuevo_Click"/>

